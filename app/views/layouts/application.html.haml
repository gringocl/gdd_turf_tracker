!!! 5
%html
  %head
    = stylesheet_link_tag 'application', media: :all
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %title
      GddTurfTracker

    %body.ui.container
      = render "shared/menu"

      - if notice
        .ui.message.info
          %i.icon.close
          = notice
      - if alert
        .ui.warning.message
          %i.icon.close
          = alert

      = yield

    :javascript
      $('.message .close')
        .on('click', function() {
          $(this)
            .closest('.message')
            .transition('fade')
          ;
        })
      ;
