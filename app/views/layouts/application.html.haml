!!! 5
%html
  %head
    = stylesheet_link_tag 'application', media: :all
    = csrf_meta_tags

    %title
      TurfTracker

    %body.ui.container
      = render "shared/menu"
      = render 'shared/flash_messages'

      .ui.container
        = yield

      #modal-holder

      = javascript_include_tag 'application'

      :javascript
        $('.message .close')
          .on('click', function() {
            $(this)
              .closest('.message')
              .transition('fade')
            ;
          })
        ;
