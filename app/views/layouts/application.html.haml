!!! 5
%html
  %head
    = stylesheet_link_tag 'application', media: :all
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %title
      GddTurfTracker

    %body
      .ui.fixed.menu.segment
        .ui.container
          .right.item
            - if current_user
              = link_to('Log Out', destroy_user_session_path, class: 'ui button', method: :delete)
            - else
              = link_to('Log In', new_user_session_path, class: 'ui button')

      - if notice
        .ui.message.info
          = notice
      - if alert
        .ui.warning.message
          = alert

      .ui.bottom.attached.segment
        = yield
