!!! 5
%html
  %head
    = stylesheet_link_tag 'application', media: :all
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %title
      TurfTracker

    %body.ui.container
      = render "shared/menu"
      = render 'shared/flash_messages'

      = yield

    :javascript
      $('.message .close')
        .on('click', function() {
          $(this)
            .closest('.message')
            .transition('fade')
          ;
        })
      ;
