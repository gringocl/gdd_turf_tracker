<p id="notice"><%= notice %></p>

<h1>Listing Weather Infos</h1>

<table>
  <thead>
    <tr>
      <th>Max temp</th>
      <th>Min temp</th>
      <th>Date</th>
      <th>Base temp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_infos.each do |weather_info| %>
      <tr>
        <td><%= weather_info.max_temp %></td>
        <td><%= weather_info.min_temp %></td>
        <td><%= weather_info.date %></td>
        <td><%= weather_info.base_temp %></td>
        <td><%= link_to 'Show', weather_info %></td>
        <td><%= link_to 'Edit', edit_weather_info_path(weather_info) %></td>
        <td><%= link_to 'Destroy', weather_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

