<p id="notice"><%= notice %></p>

<h1>Listing Crops</h1>

<table>
  <thead>
    <tr>
      <th>Gdd target</th>
      <th>Name</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.gdd_target %></td>
        <td><%= crop.name %></td>
        <td><%= crop.start_date %></td>
        <td><%= link_to 'Show', location_crop_path(@location, crop) %></td>
        <td><%= link_to 'Edit', edit_location_crop_path(@location, crop) %></td>
        <td><%= link_to 'Destroy', location_crop_path(@location, crop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crop', new_location_crop_path(@location) %>
